@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfc: <https://www.rdf-connect.com/#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

[]
  a rdfc:Package ;
  rdfc:version "0.0.1" ;
  rdfc:author "Jens Pots" ;
  rdfc:description "Template repository for writing new RDF-Connect processors in Kotlin." ;
  rdfc:repo "https://github.com/jenspots/rdfc-template-kt" ;
  rdfc:license "MIT" ;
  rdfc:prepare ( "echo 'Hello, World!'" ) ;
  rdfc:processors rdfc:KotlinProcessorTemplate .

rdfc:KotlinProcessorTemplate
  a rdfc:Processor ;
  rdfc:target rdfc:KotlinRunner ;
  rdfc:entrypoint <.> .

[]
  a sh:NodeShape ;
  sh:closed true ;
  sh:ignoredProperties ( rdf:type ) ;
  sh:targetClass rdfc:KotlinProcessorTemplate ;
  sh:property [
    sh:maxCount 1 ;
    sh:minCount 1 ;
    sh:name "arguments" ;
    sh:path rdfc:arguments ;
    sh:node [
        sh:maxCount 1 ;
        sh:minCount 1 ;
        sh:name "incoming" ;
        sh:path rdfc:incoming ;
        sh:class rdfc:Reader ;
      ], [
        sh:maxCount 1 ;
        sh:minCount 1 ;
        sh:name "outgoing" ;
        sh:path rdfc:outgoing ;
        sh:class rdfc:Writer ;
      ] ;
    ] ;
  ].

